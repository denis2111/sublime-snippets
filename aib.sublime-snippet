	<content><![CDATA[
template<class T = int>
struct AIB {
  vector<T> aib;

  AIB(int n) : aib(n + 1) {}

  void update(int p, T val) {
    for(; p < aib.size(); p += p & (-p)) aib[p] += val;
  }

  T query(int p) {
    T res;
    for(res = 0; p; p &= p - 1) res += aib[p];
    return res;
  }

  T query(int l, int r) {
    return query(aib, r) - query(aib, l - 1);
  }
};


]]></content>
	<tabTrigger>__AIB</tabTrigger>
